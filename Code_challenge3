name = input("Please input your name:")
fare = eval(input("Fare free:"))
student = input("Are you currently a student?")

if student.lower() == "yes":
  discount = fare * 0.2
  new_fare = fare - discount
  print("Hi",name,", your discount is",discount,". Your new fare fee is" ,new_fare)
else:
  print("Hi",name,", you're only eligibnle for regular price.")
